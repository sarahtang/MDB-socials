<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_social"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.sarahtang.mdbsocials.NewSocialActivity">

    <ImageView
        android:layout_width="390dp"
        android:layout_height="204dp"
        android:id="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#51a2da"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="204dp"
        android:layout_marginTop="-62dp"
        android:background="#51a2da"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:inputType="text|textPersonName"
        android:ems="10"
        android:id="@+id/editName"
        android:background="#e4e4e4"
        android:hint="Name of Event"
        android:textColor="#95989a"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_height="33dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/addImageButton"
        app:layout_constraintRight_toRightOf="@+id/addImageButton"
        app:layout_constraintLeft_toLeftOf="@+id/addImageButton"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="300dp" />

    <EditText
        android:layout_height="39dp"
        android:inputType="date"
        android:ems="10"
        android:background="#e4e4e4"
        android:id="@+id/editDate"
        android:layout_marginTop="8dp"
        android:textColor="#95989a"
        app:layout_constraintTop_toBottomOf="@+id/editName"
        app:layout_constraintLeft_toLeftOf="@+id/editName"
        android:hint="MM/DD/YY"
        app:layout_constraintRight_toRightOf="@+id/editName"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="300dp" />

    <EditText
        android:inputType="textShortMessage"
        android:ems="10"
        android:id="@+id/editDescription"
        android:hint="Description"
        android:layout_marginTop="8dp"
        android:background="#e4e4e4"
        android:textColor="#95989a"
        app:layout_constraintTop_toBottomOf="@+id/editDate"
        app:layout_constraintLeft_toLeftOf="@+id/editDate"
        app:layout_constraintRight_toRightOf="@+id/editDate"
        app:layout_constraintHorizontal_bias="0.33"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="300dp"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/addImageButton"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="93dp"
        android:background="@drawable/ic_photo_camera_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Submit"
        android:layout_width="157dp"
        android:layout_height="45dp"
        android:id="@+id/buttonSubmit"
        android:background="#ffcf32"
        android:textColor="#4e4f50"
        android:textStyle="bold"
        android:textSize="20dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/editDescription"
        app:layout_constraintLeft_toLeftOf="@+id/editDescription"
        app:layout_constraintRight_toRightOf="@+id/editDescription" />

    <ProgressBar
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:visibility="invisible"
        android:layout_width="182dp"
        android:layout_height="16dp"
        android:id="@+id/progressBar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonSubmit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <ImageView
        android:id="@+id/rectangle"
        android:layout_width="182dp"
        android:layout_height="176dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="610dp"
        android:background="@drawable/rectangle"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.182" />


</android.support.constraint.ConstraintLayout>
