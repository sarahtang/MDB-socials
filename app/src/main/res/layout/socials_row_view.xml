<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#51a2da"
    android:layout_marginBottom="8dp"
    android:id="@+id/viewSocial">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#efeded"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="115dp"
            android:layout_height="95dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageEvent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="Name of Event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameEvent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintLeft_toRightOf="@+id/imageEvent"
            android:layout_marginLeft="24dp"
            android:textColor="#2069a2"
            android:textStyle="bold"
            android:textSize="20dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintHorizontal_bias="0.16" />

        <TextView
            android:text="Creator of Event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/creatorEvent"
            app:layout_constraintTop_toBottomOf="@+id/nameEvent"
            app:layout_constraintLeft_toLeftOf="@+id/nameEvent"
            android:layout_marginTop="8dp" />

        <TextView
            android:text="Number of People Interested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberInterestedEvent"
            app:layout_constraintLeft_toLeftOf="@+id/creatorEvent"
            app:layout_constraintTop_toBottomOf="@+id/creatorEvent"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>